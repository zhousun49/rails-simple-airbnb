<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name%>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.input :img, as: :hidden, input_html: { value: "http://lorempixel.com/640/480"} %>
  <%= f.submit "Add a Flat", class: "btn btn-success" %>
<% end %>

